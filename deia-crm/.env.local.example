# ===========================================
# DEIA CRM - Variáveis de Ambiente
# ===========================================
# Copie este arquivo para .env.local e preencha os valores

# Supabase (obrigatório)
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua-anon-key
SUPABASE_SERVICE_ROLE_KEY=sua-service-role-key

# Chatwoot
CHATWOOT_API_URL=https://sua-instancia-chatwoot.com
CHATWOOT_API_KEY=sua-api-key
CHATWOOT_WEBHOOK_SECRET=seu-webhook-secret
CHATWOOT_PLATFORM_TOKEN=seu-platform-token

# UAZAPI (WhatsApp)
UAZAPI_URL=https://sua-instancia-uazapi.com
UAZAPI_MASTER_TOKEN=seu-master-token

# App
# Em produção, use a URL real (ex: https://crm.seudominio.com)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend (Email)
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=DEIA CRM <noreply@seudominio.com>
